{
    "hosting": {
        "public": ".output/public",
        "ignore": [
            "firebase.json",
            "**/.github",
            "**/.gitignore",
            "**/.env",
            "**/.firebaserc",
            "**/.vscode",
            "**/.vinxi",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "database": {
        "rules": "database.rules.json"
    }
}